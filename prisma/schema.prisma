datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ong {
  id        String     @id @default(uuid())
  name      String
  email     String
  password  String
  whatsapp  String
  city      String
  uf        String     @db.VarChar(2)
  incidents Incident[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("ongs")
}

model Incident {
  id          String   @id @default(uuid())
  title       String
  description String
  value       Decimal  @db.Money
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ongId String
  ong   Ong    @relation(fields: [ongId], references: [id])

  @@map("incidents")
}
